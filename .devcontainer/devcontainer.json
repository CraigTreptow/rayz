{
  "name": "Ruby 3.4.1 Development",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "extensions": [
        "sorbet.sorbet-vscode",
        "wingrunr21.vscode-ruby",
        "rebornix.ruby",
        "castwide.solargraph",
        "KoichiSasada.vscode-rdbg"
      ],
      "settings": {
        "ruby.useBundler": true,
        "ruby.format": "rubocop",
        "ruby.lint": {
          "rubocop": true
        },
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "bundle install",
  "remoteUser": "vscode"
}
